---
interface Props {
  icon: string;
  title: string;
  description: string;
  link: string;
}

const { icon, title, description, link } = Astro.props;
---

<a href={link} class="group block p-6 bg-rust-gray rounded-lg hover:bg-rust-gray/80 transition-all duration-300 hover:scale-[1.02] hover:shadow-xl border border-transparent hover:border-rust-pink/20">
  <div class="flex justify-between items-start">
    <div>
      <div class="flex items-center space-x-3">
        <span class="text-2xl group-hover:animate-float bg-rust-dark/50 w-12 h-12 flex items-center justify-center rounded-lg">{icon}</span>
        <h3 class="text-xl font-semibold group-hover:text-rust-pink transition-colors">{title}</h3>
      </div>
      <p class="mt-2 text-gray-400 group-hover:text-gray-300 transition-colors">{description}</p>
    </div>
    <span class="text-rust-pink transform transition-transform duration-300 group-hover:translate-x-2">â†’</span>
  </div>
</a>