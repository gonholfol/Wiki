---
interface Props {
  name: string;
  icon: string;
  damage: number;
  range: string;
  recoil: string;
  ammo: string;
  firerate: number;
  details: string;
}

const { name, icon, damage, range, recoil, ammo, firerate, details } = Astro.props;
---

<div class="bg-rust-dark/50 rounded-lg p-6 hover:bg-rust-dark/70 transition-colors cursor-pointer group">
  <div class="flex items-center space-x-3 mb-4">
    <span class="text-3xl group-hover:animate-pulse">{icon}</span>
    <h3 class="text-xl font-semibold">{name}</h3>
  </div>
  <div class="space-y-2">
    <div class="flex justify-between">
      <span class="text-gray-400">Урон:</span>
      <span class="text-rust-pink">{damage}</span>
    </div>
    <div class="flex justify-between">
      <span class="text-gray-400">Дальность:</span>
      <span>{range}</span>
    </div>
    <div class="flex justify-between">
      <span class="text-gray-400">Отдача:</span>
      <span>{recoil}</span>
    </div>
    <div class="flex justify-between">
      <span class="text-gray-400">Патроны:</span>
      <span>{ammo}</span>
    </div>
    <div class="flex justify-between">
      <span class="text-gray-400">Скорострельность:</span>
      <span>{firerate} выстр/мин</span>
    </div>
    <div class="mt-4 text-sm text-gray-400">
      {details}
    </div>
  </div>
</div>