---
interface Props {
  title: string;
  description: string;
  difficulty: string;
}

const { title, description, difficulty } = Astro.props;
---

<div class="bg-rust-dark/50 rounded-lg p-6 hover:bg-rust-dark/70 transition-colors">
  <h3 class="text-xl font-semibold mb-3">{title}</h3>
  <p class="text-gray-400 mb-3">{description}</p>
  <span class="inline-block px-3 py-1 bg-rust-pink/20 rounded-full text-sm">
    {difficulty}
  </span>
</div>