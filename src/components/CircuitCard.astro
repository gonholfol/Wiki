---
interface Props {
  name: string;
  icon: string;
  components: string[];
  power: number;
  difficulty: string;
  description: string;
}

const { name, icon, components, power, difficulty, description } = Astro.props;
---

<div class="bg-rust-dark/50 rounded-lg p-6 hover:bg-rust-dark/70 transition-colors">
  <div class="flex items-center space-x-3 mb-4">
    <span class="text-3xl">{icon}</span>
    <h3 class="text-xl font-semibold">{name}</h3>
  </div>
  <p class="text-gray-400 mb-4">{description}</p>
  <div class="space-y-2">
    <div class="flex justify-between">
      <span class="text-gray-400">Энергия:</span>
      <span>{power} Вт</span>
    </div>
    <div class="flex justify-between">
      <span class="text-gray-400">Сложность:</span>
      <span>{difficulty}</span>
    </div>
    <div class="mt-3">
      <span class="text-gray-400">Компоненты:</span>
      <div class="flex flex-wrap gap-2 mt-2">
        {components.map(component => (
          <span class="px-2 py-1 bg-rust-pink/20 rounded-full text-sm">{component}</span>
        ))}
      </div>
    </div>
  </div>
</div>