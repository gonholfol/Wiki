---
interface Props {
  name: string;
  icon: string;
  location: string;
  tools: string[];
  yield: string;
  respawnTime: string;
}

const { name, icon, location, tools, yield: resourceYield, respawnTime } = Astro.props;
---

<div class="bg-rust-dark/50 rounded-lg p-6 hover:bg-rust-dark/70 transition-colors">
  <div class="flex items-center space-x-3 mb-4">
    <span class="text-3xl">{icon}</span>
    <h3 class="text-xl font-semibold">{name}</h3>
  </div>
  <div class="space-y-2">
    <div class="flex justify-between">
      <span class="text-gray-400">Локация:</span>
      <span>{location}</span>
    </div>
    <div class="flex justify-between">
      <span class="text-gray-400">Добыча:</span>
      <span>{resourceYield}</span>
    </div>
    <div class="flex justify-between">
      <span class="text-gray-400">Респаун:</span>
      <span>{respawnTime}</span>
    </div>
    <div class="mt-3">
      <span class="text-gray-400">Инструменты:</span>
      <div class="flex flex-wrap gap-2 mt-2">
        {tools.map(tool => (
          <span class="px-2 py-1 bg-rust-pink/20 rounded-full text-sm">{tool}</span>
        ))}
      </div>
    </div>
  </div>
</div>